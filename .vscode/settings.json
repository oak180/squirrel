{
    // launch terminal into tmux session 'squirrel'
    "terminal.integrated.defaultProfile.linux": "tmux",
    "terminal.integrated.profiles.linux": {
        "tmux": {
            "path": "tmux",
            "icon": "terminal-tmux",
            "args": [
                "-c",
                "if command -v tmux &>> /dev/null && [ -z \"$TMUX\" ]; then tmux attach-session -t squirrel || tmux new-session -s squirrel; else /bin/bash; fi"
            ]
        }
    }
}